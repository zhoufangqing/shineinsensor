function ShowPopCategory() {
    if (_HidePopCategory != null) {
        clearTimeout(_HidePopCategory);
    }
    _G("PopCategoryBox").style.display = "inherit";
}
function HidePopCategory() {
    if (!_Internally(_G("PopCategoryBox")))
        _HidePopCategory = setTimeout('_G("PopCategoryBox").style.display = "none"', 200);
}

function ShowBlog() {
    if (_BlogIndex == 5) _BlogIndex = 0;
    _S(_G("BlogShow" + _BlogIndex), 0, 1, 500, 50);
    setTimeout('_S(_G("BlogShow" + _BlogIndex.toString()), 1, 0, 500, 50); ++_BlogIndex;', 3000);
    setTimeout("ShowBlog()", 5000);

}


function SearchKeyword(Keyword) {
    if (/^\s*$/.test(Keyword))return;
    open("/Search.aspx?Search="+Keyword);
}

